<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <servlet>
        <servlet-name>LoginDBContext</servlet-name>
        <servlet-class>controler.LoginControler</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>HomeControler</servlet-name>
        <servlet-class>controler.HomeControler</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>AddProductControler</servlet-name>
        <servlet-class>controler.AddProductControler</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>BillControler</servlet-name>
        <servlet-class>controler.BillControler</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>StoreControler</servlet-name>
        <servlet-class>controler.StoreControler</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>LoginDBContext</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>HomeControler</servlet-name>
        <url-pattern>/home</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>AddProductControler</servlet-name>
        <url-pattern>/product/add</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>BillControler</servlet-name>
        <url-pattern>/product/bill</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>StoreControler</servlet-name>
        <url-pattern>/product/store</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
</web-app>
